name: Build Android TV APK (armeabi-v7a)

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout source
        uses: actions/checkout@v4

      # 安装 JDK 17 (Android Gradle Plugin 推荐)
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      # 安装 Node.js (React Native/前端部分依赖)
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      # 安装 Yarn
      - name: Install Yarn
        run: npm install -g yarn

      # 安装前端依赖
      - name: Install JS dependencies
        run: yarn install --frozen-lockfile

      # 安装 Gradle Wrapper 权限
      - name: Grant execute permission for gradlew
        run: chmod +x android/gradlew

      # 构建 armeabi-v7a 的 release APK
      - name: Build Release APK
        working-directory: android
        run: ./gradlew assembleRelease -ParmFilters=armeabi-v7a

      # 输出 APK 文件路径
      - name: List APK outputs
        run: ls -R android/app/build/outputs/

      # 上传构建产物
      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: OrionTV-armv7a-release
          path: android/app/build/outputs/apk/release/*.apk
